@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Client>;

@if (ViewBag.stylistCount.Count == 0)
{
  <h3>Add a Stylist before adding a Client!</h3>
  <hr>
  <p>@Html.ActionLink("Return Home", "Index", "Home")</p>
}

else
{
  @if (@Model.Count == 0)
  {
    <h2>There are no Clients in the list. Add a Client below.</h2>
    <hr>
  }
  <h2>Client List:</h2>
  <hr>
      @foreach (Client client in Model)
      {
      <div class="col-md-4 text-center">
        <div class="card card-block d-flex">
          <div class="card-body align-items-center justify-content-center">
            <li><b>Client Name: </b>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
            <li><b>Stylist Name: </b>@client.Stylist.StylistName</li>
          </div>
        </div>
      </div>
      }
  <hr>
  <p>@Html.ActionLink("Add new client", "Create")</p>
  <p>@Html.ActionLink("Return Home", "Index", "Home")</p>
}

