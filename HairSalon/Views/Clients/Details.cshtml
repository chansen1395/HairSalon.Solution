@{
  Layout = "_Layout";
}

@model Salon.Models.Client

<h2>Client Details</h2>
<hr>
<div class="col-md-4 text-center">
  <div class="card card-block d-flex">
    <div class="card-body align-items-center d-flex justify-content-center">
      <h3>Client Name: @Html.DisplayFor(model => model.ClientName)</h3>
    </div>
  </div>
</div>
<div class="col-md-4 text-center">
  <div class="card card-block d-flex">
    <div class="card-body align-items-center d-flex justify-content-center">
      <h3>Phone Number: @Html.DisplayFor(model => model.ClientPhone)</h3>
    </div>
  </div>
</div>
<hr>
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</p>
<p>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</p>
