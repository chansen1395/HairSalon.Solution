@{
  Layout = "_Layout";
}

@model Salon.Models.Client

<h2>Edit</h2>

<h4>Edit this client: @Html.DisplayFor(model => model.ClientName)</h4>
<hr>
<div class="col-md-4 text-center">
  <div class="card card-block d-flex">
    <div class="card-body align-items-center justify-content-center">
      @using (Html.BeginForm())
      {
          @Html.HiddenFor(model => model.ClientId)


          <li>@Html.LabelFor(model => model.ClientName)
          @Html.EditorFor(model => model.ClientName)</li>

          <li>@Html.LabelFor(model => model.ClientPhone)
          @Html.EditorFor(model => model.ClientPhone)</li>

          <li>@Html.LabelFor(model => model.Stylist)
          @Html.DropDownList("StylistId")</li>
          <br>
          <input type="submit" value="Save" />
      }
    </div>
  </div>
</div>
<hr>
