@{
  Layout = "_Layout";
}

@model Salon.Models.Client

<h4>Add a new client</h4>
<hr>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.ClientName)
    @Html.TextBoxFor(model => model.ClientName)

    @Html.LabelFor(model => model.ClientPhone)
    @Html.TextBoxFor(model => model.ClientPhone, new { @type = "number" })
    
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")

    <input type="submit" value="Add new client" class="btn btn-default" />
}
<hr>
<p>@Html.ActionLink("Show all clients", "Index")</p>